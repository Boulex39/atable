{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('styles/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-wrap">
  <div class="auth-card">
    <h1 class="auth-title">Se connecter</h1>
    <p class="auth-sub">Accédez à vos recettes et fonctionnalités.</p>

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="flash">{{ message }}</div>
      {% endfor %}
    {% endfor %}

    {% if error %}
      <div class="flash" style="background:#fee2e2;border-color:#fecaca;color:#7f1d1d;">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    <form method="post" action="{{ path('app_login') }}">
      <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="text" id="inputEmail" name="email" value="{{ last_username }}" required autofocus>
      </div>

      <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" id="inputPassword" name="password" required>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <label class="remember-row">
        <input type="checkbox" name="_remember_me"> Se souvenir de moi
      </label>

      <div class="auth-actions">
        <button class="btn-primary" type="submit">Connexion</button>
        <div class="auth-alt">
          Pas encore de compte ?
          <a href="{{ path('app_register') }}">Créer un compte</a>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}


