{% extends 'base.html.twig' %}

{% block title %}Espace d'administration - À Table !{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
<section class="admin-dashboard">

    <h1>Espace d’administration</h1>

    {# --- GESTION DES CATÉGORIES --- #}
    <div class="admin-block">
        <h2>Gestion des catégories</h2>

        <div class="actions-top">
            <a href="{{ path('app_category_new') }}" class="btn btn-add">Nouvelle catégorie</a>
        </div>

        <div class="table-wrapper">
            <table class="category-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Date de création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <td data-label="Nom">{{ category.name }}</td>
                        <td data-label="Date de création">{{ category.createdAt ? category.createdAt|date('d/m/Y H:i') :
                            '—' }}</td>
                        <td data-label="Actions">
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}"
                                class="btn btn-edit">Modifier</a>
                            <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}"
                                style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn btn-delete"
                                    onclick="return confirm('Supprimer cette catégorie ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3">Aucune catégorie enregistrée.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {# --- GESTION DES UTILISATEURS --- #}
    <div class="admin-block">
        <h2>Gestion des utilisateurs</h2>

        <div class="table-wrapper">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Pseudo</th>
                        <th>Rôle actuel</th>
                        <th>Changer le rôle</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td data-label="Email">{{ user.email }}</td>
                        <td data-label="Pseudo">{{ user.username ?: '—' }}</td>
                        <td data-label="Rôle actuel">
                            {% if 'ROLE_ADMIN' in user.roles %}
                            <span class="role-badge admin">Administrateur</span>
                            {% else %}
                            <span class="role-badge user">Utilisateur</span>
                            {% endif %}
                        </td>
                        <td data-label="Changer le rôle">
                            <form method="post" action="{{ path('app_admin_change_role', {id: user.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('change_role' ~ user.id) }}">
                                <select name="role">
                                    <option value="ROLE_USER" {{ 'ROLE_USER' in user.roles ? 'selected' }}>Utilisateur
                                    </option>
                                    <option value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in user.roles ? 'selected' }}>
                                        Administrateur</option>
                                </select>
                                <button class="btn btn-small">Mettre à jour</button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4">Aucun utilisateur trouvé.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</section>
{% endblock %}