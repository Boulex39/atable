{{ form_start(form, {'attr': {'class': 'edit-form', 'enctype': 'multipart/form-data'}}) }}

  <div class="form-group">
    {{ form_label(form.title, 'Titre') }}
    {{ form_widget(form.title, {'attr': {'class': 'input-field'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.description, 'Description') }}
    {{ form_widget(form.description, {'attr': {'class': 'textarea-field scrollable'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.ingredients, 'Ingrédients') }}
    {{ form_widget(form.ingredients, {'attr': {'class': 'textarea-field scrollable'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.steps, 'Étapes') }}
    {{ form_widget(form.steps, {'attr': {'class': 'textarea-field scrollable', 'id': 'recipe_steps'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.prepTime, 'Temps de préparation (min)') }}
    {{ form_widget(form.prepTime, {'attr': {'class': 'input-field'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.cookTime, 'Temps de cuisson (min)') }}
    {{ form_widget(form.cookTime, {'attr': {'class': 'input-field'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.category, 'Catégorie') }}
    {{ form_widget(form.category, {'attr': {'class': 'select-field'}}) }}
  </div>

  <div class="form-group">
    {{ form_label(form.imageFile, 'Image (depuis votre ordinateur)') }}
    {{ form_widget(form.imageFile, {'attr': {'class': 'input-field'}}) }}
  </div>

  <button type="submit" class="btn-update">
    {{ button_label|default('Mettre à jour') }}
  </button>

{{ form_end(form) }}

