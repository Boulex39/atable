{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ category.name }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
<section class="admin-dashboard">
  <h1>{{ category.name }}</h1>

  <p><strong>Date de création :</strong> {{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : 'N/A' }}</p>

  <div class="actions-top">
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-edit">Modifier</a>
    {{ include('category/_delete_form.html.twig') }}
    <a href="{{ path('app_category_index') }}" class="back-link">← Retour à la liste</a>
  </div>
</section>
{% endblock %}

