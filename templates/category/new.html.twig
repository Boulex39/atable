{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie - À Table !{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('styles/category.css') }}">
{% endblock %}

{% block body %}
<section class="category-new">
  <h1>Ajouter une nouvelle catégorie</h1>

  {{ form_start(form, {'attr': {'class': 'category-form'}}) }}
    <div class="form-group">
      {{ form_label(form.name, 'Nom de la catégorie') }}
      {{ form_widget(form.name, {'attr': {'class': 'input-field', 'placeholder': 'Ex. : Dessert, Entrée, Oriental...'}}) }}
    </div>

    <button type="submit" class="btn btn-add">Créer la catégorie</button>
  {{ form_end(form) }}

  <a href="{{ path('app_admin_dashboard') }}" class="back-link">← Retour au tableau de bord</a>
</section>
{% endblock %}


